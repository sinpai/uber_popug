= form_for(@task) do |f|
  - if @task.errors.any?
    #error_explanation
      %h2
        = pluralize(@task.errors.count, "error")
        prohibited this task from being saved:
      %ul
        - @task.errors.full_messages.each do |message|
          %li= message

  .form-group
    = f.text_field :description
    -# = f.select :status, options_for_select(status_options)
  .actions
    = f.submit
